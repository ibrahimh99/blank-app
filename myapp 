import streamlit as st

# إعدادات الصفحة والتصميم
st.set_page_config(page_title="تطبيق محرك الصحة", page_icon="⚖️")

st.title("⚖️ تطبيق محرك الصحة والوقود الذكي")
st.write("احسب مؤشر جسمك واكتشف جودة وقودك الغذائي")

# القسم الأول: حساب المنظومة الجسمانية
st.header("1. تحليل بيانات الجسم")
col1, col2 = st.columns(2)

with col1:
    weight = st.number_input("أدخل وزنك (كيلوجرام):", min_value=10.0, max_value=200.0, value=60.0)
    with col2:
        height = st.number_input("أدخل طولك (سنتيمتر):", min_value=50.0, max_value=250.0, value=160.0)

        if st.button("احسب مؤشر كتلتي"):